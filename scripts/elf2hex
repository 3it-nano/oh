#!/usr/bin/env python3
#############################################################################
# elf2hex <arch> <inputfile> <outputfile>
#
# Uses '<arch>-unknown-elf-objcopy'  
#
#############################################################################
import os
import sys

ARCH = sys.argv[1]
ELF  = sys.argv[2]
HEX  = sys.argv[3]

#############################################
#SETUP
if(ARCH=="rv32i"):
    GCCROOT="riscv64-unknown-elf-"
else:
    GCCROOT="e-"
    
##############################################
#RUN OBJCOPY
CMD=GCCROOT + "objcopy -Overilog" + " " + ELF + " " + HEX
print(CMD)
os.system(CMD)
#RUN OBJDUMP
CMD=GCCROOT + "objdump -D" + " " + ELF + " > " + HEX + ".dump"
print(CMD)
os.system(CMD)





